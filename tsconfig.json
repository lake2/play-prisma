{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "sourceMap": false,
        "outDir": "run",
        "noEmit": false,
        "pretty": true,
        "strict": true,
        "declaration": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["./src/**/*", "./test/**/*"]
}
